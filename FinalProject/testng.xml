<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="AutomationExercise Test Suite" parallel="tests" thread-count="4">

    <test name="UI Tests" parallel="classes" thread-count="3">
        <classes>
            <class name="com.automationexercise.tests.ui.HomeAndAuthTests"/>
            <class name="com.automationexercise.tests.ui.CartAndCheckoutTests"/>
            <class name="com.automationexercise.tests.ui.ContactAndSearchTests"/>
        </classes>
    </test>

    <test name="API Tests" parallel="classes" thread-count="3">
        <classes>
            <class name="com.automationexercise.tests.api.ProductsApiTests"/>
            <class name="com.automationexercise.tests.api.LoginApiTests"/>
            <class name="com.automationexercise.tests.api.AccountApiTests"/>
        </classes>
    </test>

</suite>

